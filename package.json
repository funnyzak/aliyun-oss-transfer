{
  "name": "koa2-starter",
  "version": "0.1.2",
  "description": "koa2 quick start project",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./index",
    "dev": "cross-env NODE_ENV=development nodemon --trace-warnings ./index",
    "watch": "npm run dev",
    "serve": "npm run dev",
    "eslint": "eslint --cache --fix ./",
    "eslint:check": "eslint --cache --fix --quiet ./",
    "test": "npx mocha ./test/**/*.test.js --exit --inspect=0.0.0.0:8888 --timeout 120000",
    "cov": "nyc npm run test",
    "prepare": "if [[ $NODE_ENV != \"production\" ]]; then husky install; fi"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/funnyzak/koa-starter.git"
  },
  "keywords": [
    "nodejs",
    "mysql",
    "koa",
    "mocha",
    "mongodb",
    "mysql",
    "redis",
    "koa2",
    "test"
  ],
  "author": "Leon <silenceace@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/funnyzak/koa-starter/issues"
  },
  "homepage": "https://github.com/funnyzak/koa-starter#readme",
  "dependencies": {
    "@koa/router": "^12.0.0",
    "ali-oss": "^6.17.1",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.8",
    "formidable": "^2.1.1",
    "ioredis": "^5.2.4",
    "joi": "^17.7.0",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-cors": "^0.0.16",
    "koa-favicon": "^2.1.0",
    "koa-json": "^2.0.2",
    "koa-router": "^12.0.0",
    "koa-session": "^6.3.1",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "moment": "^2.29.4",
    "mongodb": "^4.13.0",
    "mysql2": "^3.0.1",
    "redis": "^4.5.1",
    "sequelize": "^6.28.0",
    "time-formater": "^1.1.3",
    "uuid": "^9.0.0",
    "winston": "^3.4.0",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "power-assert": "1.6.1",
    "prettier": "2.8.2",
    "supertest": "6.3.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": 3
        }
      ]
    ]
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "prettier --write",
      "eslint --cache --fix",
      "git add"
    ],
    "*.{md,html,json,css,less,scss,sass}": [
      "prettier --write",
      "git add"
    ]
  }
}
